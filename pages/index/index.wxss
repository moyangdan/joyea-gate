/* miniprogram/pages/home.wxss */

/* 天气插件 */

.menu-avatar {
  margin-top: 100px;
}

weather {
  width: calc(100% - 20rpx);
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 0;
  left: 0;
  padding: 260rpx 0 0 20rpx;
}

.weather-btn {
  position: absolute;
  left: 30rpx;
  bottom: 90rpx;
  text-align: left;
  font-size: 28rpx;
  color: #fff;
  padding: 10rpx 12rpx;
  line-height: inherit;
  border-radius: 0;
  border-color: rgba(0, 0, 0, 0.3);
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

page {
  background: #fff;
}

.mine-btn-block {
  display: flex;
}

.mine-btn-block.active {
  width: 100%;
  height: 180rpx;
  position: fixed;
  top: 300px;
  background: #eee;
}

.empty_box {
  margin-top: 100rpx;
}

.empty_icon {
  width: 100%;
  height: 320rpx;
  text-align: center;
}

.empty_icon image {
  width: 315rpx;
  height: 100%;
}

.empty_text {
  margin-top: 30rpx;
}

.empty_text view {
  text-align: center;
  font-size: 28rpx;
  color: #797979;
}

.empty_btn {
  margin-top: 100rpx;
  width: 342rpx;
  height: 84rpx;
  line-height: 84rpx;
  color: #fff;
  background-image: linear-gradient(-142deg, #29ab91 0%, #53d5c4 100%);
  border-radius: 66rpx;
  font-size: 28rpx;
  letter-spacing: -0.58rpx;
}

.empty_btn image {
  width: 38rpx;
  height: 38rpx;
  margin-right: 20rpx;
}

.header-block {
  width: 100%;
  height: 400rpx;
  z-index: 10;
}

.header-block::before, .mine-btn-block.active::before {
  content: "";
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: absolute;
  top: 0;
  left: 0;
}

.header-block .banner {
  width: 100%;
  height: inherit;
}

.mine-btn {
  color: #fff;
  font-size: 40rpx;
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  text-decoration: underline;
}

.search-input {
  color: #fff;
  font-size: 28rpx;
  position: absolute;
  bottom: 34rpx;
  left: 210rpx;
  background: rgba(0, 0, 0, 0.4);
  padding-left: 20rpx;
}

.search-input-place {
  color: #eee;
}

.apply_btn {
  margin-top: 20px;
}

/* 列表 */

.list-block {
  box-sizing: border-box;
  /* min-height: 100vh; */
}

.item-block {
  padding: 30rpx 30rpx 0 30rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
}

.item-block .username {
  color: #576b95;
}

.item-block .userImg {
  width: 60rpx;
  height: 60rpx;
  border-radius: 8rpx;
}

.item-block .item-right {
  padding-top: 4rpx;
  box-sizing: border-box;
  width: calc(100% - 80rpx);
}

.item-block .img-block {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.item-block .img-block .img {
  width: calc((100% - 40rpx)/3);
  height: 190rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background: #f8f8f8;
  border-radius: 2rpx;
}

.item-block .img-block .img1 {
  width: 260rpx;
  height: 380rpx;
  margin-bottom: 20rpx;
  background: #f8f8f8;
  border-radius: 2rpx;
}

.item-block .img-block .img:nth-child(3n) {
  margin-right: 0;
}

.item-block .item-text {
  width: 100%;
  line-height: 50rpx;
  text-align: left;
  /* word-break: break-all;
    word-wrap: break-word;
    white-space: pre-wrap;
    box-sizing: border-box; */
  color: #3d3d3d;
  margin-top: 4rpx;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0 30rpx 0;
}

.item-block .item-time {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #999;
  padding-left: 0;
}

.item-footer .more-icon {
  display: flex;
  background: #f8f8f8;
  color: #567b95;
  padding: 0 10rpx;
  border-radius: 4rpx;
}

.empty-list {
  display: flex;
  justify-content: center;
  margin-top: 140rpx;
  color: #666;
  font-size: 32rpx;
  font-weight: 700;
}

/* release */

.release-btn {
  position: fixed;
  right: 28rpx;
  bottom: 165rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 180, 170, 0.5);
  border-radius: 50%;
}

.release-btn .iconfont {
  color: #fff;
  font-size: 40rpx;
}

.back-top {
  position: fixed;
  right: 28rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 180, 170, 0.5);
  border-radius: 50%;
  bottom: 65rpx;
  font-size: 28rpx;
}

.back-top {
  color: #fff;
  font-size: 40rpx;
}

/* loading */

.loading-block {
  width: 140rpx;
  margin: 0 auto;
  margin-top: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.contact_box {
  padding: 20rpx 30rpx;
  color: #29ab91;
  width: 100%;
  /* width: calc(100% - 60rpx);  */
  height: 88rpx;
  /* line-height: 88rpx;   *//* padding-top: 20rpx;  */
  box-sizing: border-box;
  background: #eef9f7;
  display: flex;
  align-items: center;
  justify-content: space-between;
  top: 400rpx;
  z-index: 100;
}

.contact_left {
  display: flex;
  align-items: center;
}

.contact_img {
  width: 31rpx;
  height: 33rpx;
  vertical-align: middle;
}

.door_img {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

.finish_img {
  width: 66rpx;
  height: 66rpx;
  vertical-align: middle;
}

.contact_text {
  margin-left: 12rpx;
  font-size: 26rpx;
  display: inline-block;
}

.contact_button {
  border: 1rpx solid #29ab91;
  border-radius: 4rpx;
  height: 48rpx;
  line-height: 48rpx;
  /* margin-top: 6rpx;  */
  width: 136rpx;
  padding: 0;
  font-size: 24rpx;
  background: #eef9f7;
  color: #29ab91;
  margin-right: 0;
}

.action {
  width: 200rpx !important;
}

.loading-block text {
  display: inline-block;
  width: 16rpx;
  height: 100%;
  border-radius: 8rpx;
  background: lightgreen;
  -webkit-animation: load 1s ease infinite;
}

@-webkit-keyframes load {
  0%, 100% {
    height: 80rpx;
    background: lightgreen;
  }

  50% {
    height: 140rpx;
    margin: -30rpx 0;
    background: lightblue;
  }
}

.loading-block text:nth-child(2) {
  -webkit-animation-delay: 0.2s;
}

.loading-block text:nth-child(3) {
  -webkit-animation-delay: 0.4s;
}

.loading-block text:nth-child(4) {
  -webkit-animation-delay: 0.6s;
}

.loading-block text:nth-child(5) {
  -webkit-animation-delay: 0.8s;
}
